#!/usr/bin/env bash

version=0.0.1

source "$(dirname "$0")/.bpan/run-or-docker.sh"

check() (
  need bash 4.4
  need perl 5.28
  need perl YAML::PP
  need node 10
  need node ingy-prelude testml-compiler/lib/testml-compiler/compiler
  need jq   1.6
)

dockerfile() (
  from  alpine
  apk   jq
  npm   ingy-prelude testml-compiler
  cpanm YAML::PP
  copy-bin
)

run "$@"
